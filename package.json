{
	"name": "{{PROJECT_NAME}}",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"volta": {
		"node": "20.5.1"
	},
	"scripts": {
		"dev": "concurrently \"yarn dev:server\" \"yarn dev:client\"",
		"dev:integration": "NODE_ENV=integration concurrently \"PORT=4175 yarn start:server\" \"VITE_PORT=4174 yarn dev:client\"",
		"dev:server": "nodemon --watch src/ --ext ts,json --exec \"tsx src/server.ts\"",
		"dev:client": "vite dev",
		"start": "yarn build && NODE_ENV=production yarn start:server",
		"start:integration": "NODE_ENV=integration PORT=4173 yarn start:server",
		"start:server": "tsx src/server.ts",
		"checks": "concurrently \"yarn test\" \"yarn lint\"",
		"test": "concurrently \"yarn test:integration\" \"yarn test:unit\"",
		"test:integration": "playwright test",
		"test:unit": "vitest run",
		"lint": "concurrently \"yarn lint:svelte\" \"yarn lint:eslint\" \"yarn lint:format\"",
		"lint:svelte": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint:eslint": "eslint src/ tests/ scripts/",
		"lint:format": "prettier --plugin-search-dir . --check src/ tests/ scripts/",
		"format": "prettier --plugin-search-dir . --write src/ tests/ scripts/",
		"build": "vite build",
		"preview": "vite preview",
		"setupCI": "yarn && concurrently \"yarn build\" \"yarn playwright install chromium\"",
		"runScript": "tsx"
	},
	"devDependencies": {
		"@playwright/test": "^1.28.1",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.20.4",
		"@types/express": "^4.17.1",
		"@types/node": "20.5.1",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.14",
		"concurrently": "^8.2.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"nodemon": "^3.0.1",
		"postcss": "^8.4.27",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.4.1",
		"tsx": "^3.12.6",
		"typescript": "^5.0.4",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"dependencies": {
		"@laxels/utils": "^1.0.8",
		"body-parser": "^1.20.2",
		"express": "^4.18.2",
		"http-status-codes": "^2.2.0",
		"immer": "^9.0.21",
		"uuid": "^9.0.0"
	}
}
